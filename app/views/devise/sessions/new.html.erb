<%= render 'layouts/users_header' %>

<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ログイン画面
      </h1>
    </div>
  </div>
</section>

<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<h2 class="title is-2">Log in</h2>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				  <div class="field">
				  	<div class="control">
              <label class="label">メールアドレス</label>
				    	<%= f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label: false %>
				    </div>
				  </div>

				  <div class="field">
				  	<div class="control">
            <label class="label">パスワード</label>
				    <%= f.input :password, required: false, input_html: { class: "input"}, wrapper: false, label: false %>
						</div>
					</div>

					<div class="field">
				  	<div class="control">
				    <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
				  	</div>
					</div>

				  <%= f.button :submit, "Log in", class:"button is-danger is-medium" %>
				<% end %>
				<br/>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</section>
