<%= render 'layouts/users_header' %>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        お客様情報登録
      </h1>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="section">
          <div class="field">
            <div class="control">
              <label class="label">お名前（姓）</label>
              <%= f.input :last_name, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">お名前（名）</label>
              <%= f.input :given_name, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（姓）</label>
              <%= f.input :last_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（名）</label>
              <%= f.input :given_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <%= f.fields_for :addresses do |i| %>

          <div class="field">
            <div class="control">
              <label class="label">都道府県</label>
              <%= i.input :prefecture, collection: Address.prefectures.keys, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">郵便番号</label>
              <%= i.input :post_code, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "-（ハイフン）は不要です" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">市区町村</label>
              <%= i.input :city, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">番地以降</label>
              <%= i.input :street_number, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">建物名</label>
              <%= i.input :building, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">お名前（姓）</label>
              <%= i.input :last_name, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "お届け先の宛名の名前を入力してください" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">お名前（名）</label>
              <%= i.input :given_name, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "お届け先の宛名の名前を入力してください" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（姓）</label>
              <%= i.input :last_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（名）</label>
              <%= i.input :given_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <% end %>

          <div class="field">
            <div class="control">
              <label class="label">電話番号</label>
              <%= f.input :phone_number, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "-（ハイフン）は不要です" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">メールアドレス</label>
              <%= f.input :email, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">パスワード</label>
              <%= f.input :password, required: true, input_html: { class:"input" }, wrapper: false, label: false, hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length) %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">パスワード（確認）</label>
              <%= f.input :password_confirmation, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Sign up", class:"button is-danger is-medium" %>
            </div>
          </div>

          <% end %>

          <br/>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
