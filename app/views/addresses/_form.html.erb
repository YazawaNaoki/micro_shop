<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <%= simple_form_for( [user, address], url: user_addresses_path ) do |f| %>
          <div class="field">
            <div class="control">
              <label class="label">お名前（姓）</label>
              <%= f.input :last_name, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "お届け先の宛名の名前を入力してください" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">お名前（名）</label>
              <%= f.input :given_name, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "お届け先の宛名の名前を入力してください" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（姓）</label>
              <%= f.input :last_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">ふりがな（名）</label>
              <%= f.input :given_name_furigana, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label class="label">都道府県</label>
              <%= f.input :prefecture, collection: Address.prefectures.keys, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">郵便番号</label>
              <%= f.input :post_code, required: true, input_html: { class: "input" }, wrapper: false, label: false, hint: "-（ハイフン）は不要です" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">市区町村</label>
              <%= f.input :city, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">番地以降</label>
              <%= f.input :street_number, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">建物名</label>
              <%= f.input :building, required: true, input_html: { class: "input" }, wrapper: false, label: false %>
            </div>
          </div>

          <%= f.button :submit, class: "button is-info" %>

        <% end %>
      </div>
    </div>
  </div>
</section>
