<%= simple_form_for(artist, url: admins_artists_path) do |f| %>
<section>
  <div class="container">
    <div class="field">
      <div class="control">
        <%= f.input :name, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>
    <%= f.button :submit, class:"button is-danger is-medium" %>
  </div>
</section>
<% end %>
