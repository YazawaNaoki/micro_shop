<div class="">
  <div class="columns is-centered">
    <div class="column is-11">
      <div class="nested-fields well well-compact">
        <div class="form-group">
          <div class="field">
            <div class="control">
              <%= f.input :cd_num, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <%= link_to_remove_association "remove cd", f, class: "button is-danger is-small" %>
        </div>

        <div class="field">
          <div class="musics">
            <%= f.fields_for :musics do |music| %>
            <%= render 'music_fields', f: music %>
            <% end %>
            <div class="links">
              <%= link_to_add_association "add music", f, :musics, class: " button is-success is-small" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
