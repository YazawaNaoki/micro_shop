<% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved: not successfully</h2>
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= simple_form_for @product, url: admins_products_path do |f| %>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :label_id, as: :select, collection: @label_hash, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <label class="label">ジャケット画像</label>
                  <div class="file">
                    <label class="file-label">
                      <%= f.input :image, as: :file, input_html: { class:"file-input instrument-image" }, label: false, wrapper: false %>
                      <span class="file-cta">
                        <span class="file-icon"><i class="fa fa-upload"></i></span>
                        <span class="file-label">Choose a file…</span>
                      </span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :artist_id, as: :select, collection: @artist_hash, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :album_name, input_html: { class: "input"}, required: false, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :sell_at, input_html: { class: "input"}, required: false, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :price, input_html: { class: "input"}, required: false, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :genre, collection: Product.genres.keys, input_html: { class: "input"}, required: false, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="panel">
          <div class="columns is-centered">
            <div class="column is-11">
              <div class="field">
                <div class="control">
                  <%= f.input :product_status, collection: Product.product_statuses.keys, input_html: { class: "input"}, required: false, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div id="cds">
          <div class="panel">
            <%= f.fields_for :cds do |cd| %>
            <%= render 'cd_fields', f: cd %>
            <% end %>
          </div>
          <div id="links">
            <%= link_to_add_association 'add cd', f, :cds, class: "button is-success is-small" %>
          </div>

          <%= f.button :submit, class: "button is-info" %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</section>
