<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レーベル名新規登録
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <%= simple_form_for(label, url: admins_labels_path) do |f| %>
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="field">
            <div class="control">
              <label class="label">レーベル名</label>
              <%= f.input :name, required: false, input_html: { class: "input"}, wrapper: false, label: false %>
            </div>
          </div>
          <%= f.button :submit, class:"button is-danger is-medium" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
