<%= render 'layouts/users_header' %>

<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        クレジットカード登録
      </h1>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do %>
          <div class="section">
            <div class="field">
              <div class="control">
                <label class="label">カード番号</label>
                <%= text_field_tag "number", "", class: "number input", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"  %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label class="label">有効期限</label>
                <select id="exp_month" name="exp_month" type="text" class="control select">
                  <option value="">--</option>
                  <option value="1">01</option>
                  <option value="2">02</option>
                  <option value="3">03</option>
                  <option value="4">04</option>
                  <option value="5">05</option>
                  <option value="6">06</option>
                  <option value="7">07</option>
                  <option value="8">08</option>
                  <option value="9">09</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                </select>
                <strong>月/</strong>
                <select id="exp_year" name="exp_year" type="text" class="control select">
                  <option value="">--</option>
                  <option value="2020">20</option>
                  <option value="2021">21</option>
                  <option value="2022">22</option>
                  <option value="2023">23</option>
                  <option value="2024">24</option>
                  <option value="2025">25</option>
                  <option value="2026">26</option>
                  <option value="2027">27</option>
                </select>
                <strong>年</strong>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label class="label">セキュリティコード</label>
                <%= text_field_tag "cvc", "", class: "cvc input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc" %>
              </div>
            </div>
            <div id="card_token"></div>
            <%= submit_tag "追加する", id: "token_submit", class: "button is-success is-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
